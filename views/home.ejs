<!doctype html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
        <title>Homepage</title>
</head>

<body>
    <%- include('./partials/nav.ejs') %>
        <div class="container mt-20">
            <h2 class="mt-5">All Blogs</h2>
            <div class="mt-3 row row-cols-4">
                <% if (blogs.length !=0) { %>
                    <% blogs.forEach(blog=> { %>
                        <div class="col">
                            <div class="card" style="width: 18rem;">
                                <img class="card-img-top" src="<%= blog.coverImageURL %>" alt="Cover Image" width="100%"
                                    height="200px">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= blog.title %>
                                    </h5>
                                    <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                            <% } %>

            </div>
        </div>
        <%- include('./partials/scripts.ejs') %>
</body>

</html>